    <h1>edit page</h1>
    <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post">
        <div>
            <label for="title"> title</label>
            <input type="text" id = "title" name = "campground[title]" value = "<%=camp.title%>">
            <label for="location">location</label>
            <input type="text" id = "location" name = "campground[location]" value = "<%=camp.location%>">
            <button>confirm edit</button>
        </div>

    </form>
    <a href="/campgrounds/<%=camp._id%>">back to this campground</a>
    

    <div class="row">
        <h1 class="text-center">EDIT CAMPGROUND</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post">
                <div>
                    <div class="mb-3">
                        <label for="title" class="form-label"> title</label>
                        <input type="text" id="title" class="form-control" name="campground[title]"value = "<%=camp.title%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">location</label>
                        <input type="text" id="location" class="form-control" name="campground[location]"value = "<%=camp.location%>">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input name:="campground[price]" type="text" class="form-control" aria-label="Amount (to the nearest dollar)"value = "<%=camp.price%>">
        
                      </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">image</label>
                        <input type="text" id="location" class="form-control" name="campground[image]"value = "<%=camp.image%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">description</label>
                        <textarea class = "form-control" name="campground[description]" id="location" cols="30" rows="2" ><%=camp.description%></textarea>
                    </div>


                    <button class="btn btn-info">edit</button>
                </div>

            </form>
            <a href="/campgrounds/<%=camp._id%>">back to this campground</a>
        </div>

    </div>