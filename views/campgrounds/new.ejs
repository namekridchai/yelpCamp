<%layout("layouts/boilerplate")%>

    <div class="row">
        <h1 class="text-center">NEW CAMPGROUND</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class = "validate" enctype="multipart/form-data">
                <div>
                    <div class="mb-3">
                        <label for="title" class="form-label"> title</label>
                        <input type="text" id="title" class="form-control" name="campground[title]" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                        <div class="invalid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">location</label>
                        <input type="text" id="location" class="form-control" name="campground[location]" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                        <div class="invalid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]"aria-label="Amount (to the nearest dollar)" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                        <div class="invalid-feedback">
                            Looks good!
                          </div>
                      </div>
                    <div class="mb-1 row " >
                      <div class = "col-3"> 
                        <label class ='btn btn-light' for="photos">Upload Picture</label>
                      </div>
                      <div class = "preview col-9 btn disabled">
                        <p>No picture selected</p>
                      </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Looks good!
                        </div>
                    </div>
                   
                    <div class="mb-1">
                        <label class="form-label" for="location">description</label>
                        <textarea class = "form-control" name="campground[description]" id="location" cols="30" rows="2" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                        <div class="invalid-feedback">
                            Looks good!
                          </div>
                    </div>

                    <input type="file" name="photos" id="photos" multiple required>
                    <br>
                    <button class="btn btn-success">submit</button>
                </div>

            </form>
            <a href="/campgrounds">all campground</a>
        </div>

    </div>
  
